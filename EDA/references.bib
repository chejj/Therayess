  author = {Kubinski, Ryszard and {Djamen-Kepaou}, Jean-Yves and Zhanabaev, Timur and {Hernandez-Garcia}, Alex and Bauer, Stefan and Hildebrand, Falk and Korcsmaros, Tamas and Karam, Sani and Jantchou, Pr{\'e}vost and Kafi, Kamran and Martin, Ryan D.},
